<Window x:Class="SecurityFramework.Forms.EditApplication"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Applications" Height="293.737" Width="597.744" ResizeMode="NoResize">
    <Grid Height="270" VerticalAlignment="Top">
        <Button Content="CANCEL" HorizontalAlignment="Left" Margin="476,216,0,0" VerticalAlignment="Top" Width="75" FontSize="16" Click="Button_Click"/>
        <Label Content="Edit Applications"  HorizontalAlignment="Left" Margin="221,16,0,0" VerticalAlignment="Top" FontSize="20"/>
        <ComboBox x:Name="application_combobox" HorizontalAlignment="Left" Margin="221,83,0,0" VerticalAlignment="Top" Width="262" SelectionChanged="application_combobox_SelectionChanged"/>
        <Label Content="Selected Application:" HorizontalAlignment="Left" Margin="101,81,0,0" VerticalAlignment="Top"/>
        <Label Content="This application is: " HorizontalAlignment="Left" Margin="109,139,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="isActive_combobox" HorizontalAlignment="Left" Margin="223,143,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="isActive_combobox_SelectionChanged"/>
        <Button x:Name="save_btn" Content="SAVE" HorizontalAlignment="Left" Margin="383,216,0,0" VerticalAlignment="Top" Width="75" FontSize="16" Click="save_btn_Click"/>
    </Grid>
</Window>
